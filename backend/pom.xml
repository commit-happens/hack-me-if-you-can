    <!-- =============================
         ‚öôÔ∏è Z√ÅVISLOSTI (DEPENDENCIES)
         ============================= -->
    <dependencies>

        <!-- üîç Spring Boot Actuator
             Umo≈æ≈àuje sledovat stav aplikace (nap≈ô. /actuator/health, /actuator/info)
             Vhodn√© pro monitoring a ladƒõn√≠ -->
<!--        <dependency>-->
<!--            <groupId>org.springframework.boot</groupId>-->
<!--            <artifactId>spring-boot-starter-actuator</artifactId>-->
<!--        </dependency>-->

        <!-- üìò OpenAPI / Swagger UI
             Automaticky generuje interaktivn√≠ API dokumentaci na adrese /swagger-ui.html
             Ide√°ln√≠ pro testov√°n√≠ endpoint≈Ø a pro frontend v√Ωvoj√°≈ôe -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
            <version>2.6.0</version>
        </dependency>

        <!-- ‚úÖ Spring Boot Validation
             Umo≈æ≈àuje pou≈æ√≠vat anotace pro validaci vstupn√≠ch dat (nap≈ô. @NotNull, @Email)
             Pou≈æ√≠v√° se nap≈ô. v DTO t≈ô√≠d√°ch nebo requestech -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <!-- üåê Spring Boot Web Starter
             Z√°kladn√≠ z√°vislost pro REST API ‚Äì obsahuje:
             - Spring MVC (kontrolery, request mapping)
             - Embedded Tomcat server
             - JSON serializaci pomoc√≠ Jackson -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- üß∞ Spring Boot DevTools
             Automaticky restartuje aplikaci p≈ôi zmƒõn√°ch k√≥du bƒõhem v√Ωvoje
             (nemƒõl by b√Ωt zapnut√Ω v produkci) -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>

        <!-- üß© Lombok
             Umo≈æ≈àuje pou≈æ√≠vat anotace jako @Getter, @Setter, @Builder, @Data
             Sni≈æuje mno≈æstv√≠ boilerplate k√≥du (gettery/settery, konstruktory apod.) -->
        <dependency>
            <groupId>org.projectlombok</groupId>
